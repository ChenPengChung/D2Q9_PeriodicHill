{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with MinGW g++",
            "type": "shell",
            "command": "C:/Strawberry/c/bin/g++.exe",
            "args": [
                "-std=c++17",
                "-g",
                "-fopenmp",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "shell": {
                    "executable": "powershell.exe"
                },
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
