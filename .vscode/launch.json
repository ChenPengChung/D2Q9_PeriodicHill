{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "MSYS2 (UCRT64) - Build & Debug Active CPP",
      "type": "cppdbg",
      "request": "launch",

      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",

      "environment": [
        { "name": "PATH", "value": "C:\\msys64\\ucrt64\\bin;${env:PATH}" }
      ],

      "externalConsole": true,

      "MIMode": "gdb",
      "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe",

      "preLaunchTask": "MSYS2: build active file",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },

    {
      "name": "MSYS2 (UCRT64) - Run Active EXE (No Build)",
      "type": "cppdbg",
      "request": "launch",

      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",

      "environment": [
        { "name": "PATH", "value": "C:\\msys64\\ucrt64\\bin;${env:PATH}" }
      ],

      "externalConsole": true,

      "MIMode": "gdb",
      "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe"
    }
  ]
}
